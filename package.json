{
  "name": "gather-pull-request-metadata",
  "version": "1.7.1",
  "description": "Gather useful publicly available information about GitHub Pull Request and provide it in easy-to-digest JSON format.",
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "keywords": [
    "github",
    "github-actions",
    "pull-request"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/gather-pull-request-metadata.git"
  },
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn run build && yarn run format && yarn run package && yarn test"
  },
  "packageManager": "yarn@4.7.0",
  "type": "module",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@octokit/core": "6.1.4",
    "@octokit/plugin-paginate-rest": "11.6.0",
    "@octokit/plugin-throttling": "9.6.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@actions/github": "6.0.0",
    "@octokit/types": "13.10.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.13.14",
    "@vercel/ncc": "0.38.3",
    "@vitest/coverage-v8": "3.1.1",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.2",
    "vitest": "3.1.1"
  }
}
